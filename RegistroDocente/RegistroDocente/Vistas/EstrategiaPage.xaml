<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RegistroDocente.Vistas.EstrategiaPage"
             xmlns:vm="clr-namespace:RegistroDocente.ViewModels"
             xmlns:local="clr-namespace:RegistroDocente.Utils"
             Title="Estrategia"
             Padding="8">
    <ScrollView>
        <StackLayout>
            <Entry x:Name="txtTexto" />
            <Editor x:Name="txtEstrategias" />
            <StackLayout Orientation="Horizontal">
                <Button Text="Guardar" x:Name="btnGuardar" Clicked="btnGuardar_Clicked" />
                <Button Text="Cancelar" x:Name="btnCancelar" Clicked="btnCancelar_Clicked" />
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>